<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainMenu"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            app:srcCompat="@drawable/happiness_fit_club" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-black"
                android:includeFontPadding="false"
                android:text="MenÃº"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_register_user"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="331dp"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/grey_button"
                android:clickable="false"
                android:elevation="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal|center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:outlineSpotShadowColor="@color/black"
                android:paddingStart="12dp"
                android:scrollHorizontally="true"
                android:text="Registro de Clientes"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="3dp"
                app:flow_horizontalAlign="center"
                app:icon="@drawable/register_client_icon"
                app:iconPadding="8dp"
                app:iconSize="23dp"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/btn_payment"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:outlineSpotShadowColor="@color/black"
                android:paddingStart="12dp"
                android:scrollHorizontally="true"
                android:text="Pago de cuotas"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="3dp"
                app:flow_horizontalAlign="center"
                app:icon="@drawable/payment_icon"
                app:iconPadding="8dp"
                app:iconSize="23dp"
                app:iconTint="@color/black"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/btn_emmit_card"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:outlineSpotShadowColor="@color/black"
                android:paddingStart="12dp"
                android:scrollHorizontally="true"
                android:text="Emitir carnet"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="3dp"
                app:flow_horizontalAlign="center"
                app:icon="@drawable/emmit_card_icon"
                app:iconPadding="8dp"
                app:iconSize="23dp"
                app:iconTint="@color/black"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_customers_report"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:outlineSpotShadowColor="@color/black"
                    android:paddingStart="12dp"
                    android:scrollHorizontally="true"
                    android:text="Reporte de clienets"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="3dp"
                    app:flow_horizontalAlign="center"
                    app:icon="@drawable/customers_icon"
                    app:iconPadding="8dp"
                    app:iconSize="23dp"
                    app:iconTint="@color/black"
                    tools:ignore="RtlCompat" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    android:text="32"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="171dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/lines"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_overdue"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:paddingLeft="0dp"
                        android:scrollHorizontally="true"
                        android:text="Cuota vencida"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:cornerRadius="3dp"
                        app:flow_horizontalAlign="center"
                        tools:ignore="RtlCompat" />

                    <Button
                        android:id="@+id/btn_to_overdue"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:paddingLeft="0dp"
                        android:scrollHorizontally="true"
                        android:text="Cuota a vencer"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:cornerRadius="3dp"
                        app:flow_horizontalAlign="center"
                        tools:ignore="RtlCompat" />

                    <Button
                        android:id="@+id/btn_overdue_today"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:paddingLeft="0dp"
                        android:scrollHorizontally="true"
                        android:text="Vencen hoy"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:cornerRadius="3dp"
                        app:flow_horizontalAlign="center"
                        tools:ignore="RtlCompat" />

                    <Button
                        android:id="@+id/btn_all_customers"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:paddingLeft="0dp"
                        android:scrollHorizontally="true"
                        android:text="Todos los clientes"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:cornerRadius="3dp"
                        app:flow_horizontalAlign="center"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="251dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/lines" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="41dp">

            <TextView
                android:id="@+id/txt_title_profile_user"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="16dp"
                android:text="Perfil de usuario"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/profileCont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/profilePhoto"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|end"
                        android:elevation="10dp"
                        app:srcCompat="@drawable/add"
                        tools:srcCompat="@drawable/add" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Nombre Apellido"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nombre.apellido@gmail.com" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_exit"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="9dp"
            android:backgroundTint="@color/exit"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="Salir"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="3dp"
            app:flow_horizontalAlign="center"
            app:icon="@drawable/exit_icon"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="23dp"
            app:iconTint="@color/black"
            tools:ignore="RtlCompat" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>